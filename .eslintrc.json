{
    "root": true,
    "parserOptions": {
        "parser": "babel-eslint"
    },
    "env": {
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "always",
            {
                "js": "never"
            }
        ],
        "indent": [
            "error",
            4,
            {
                "outerIIFEBody": 0
            }
        ],
        "linebreak-style": "off",
        "no-debugger": "off",
        "no-console": "off",
        "comma-dangle": "off",
        "no-tabs": "off",
        "eol-last": "off",
        "no-new": "off",
        "no-unused-vars": "warn",
        "arrow-parens": "off",
        "no-throw-literal": "off",
        "no-param-reassign": "off",
        "new-parens": "off",
        "no-restricted-globals": "off",
        "prefer-template": "off",
        "no-shadow": "off",
        "no-alert": "off",
        "no-unused-expressions": "off"
    }
}